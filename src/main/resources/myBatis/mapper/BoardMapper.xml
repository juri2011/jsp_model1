<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.study.jsp.dao.BoardMapper">
	<cache />
	
	<!-- int는 기본타입이므로 parameterType을 굳이 쓰지 않는다. -->
	<select id="getOne" resultType="bVo">
		select * from board where seq=#{seq};
	</select>
	
	<select id="findAll" resultType="bVo">
		select * from board order by seq desc;
	</select>
	
	<!-- insert는 기본적으로 result type이 int로 나온다 -->
	<!-- mp().save(bVo)로 가져오므로 parameterType을 지정해줘야 한다 -->
	<insert id="save" parameterType="bVo">
		insert into board (userid, title, content, nickname)
		values(#{userid}, #{title}, #{content}, #{nickname});
	</insert>
	
	<update id="increaseCnt">
		update board
		<set>
			<if test="seq!=null">
				cnt = cnt+1 where seq=#{seq};
			</if>
		</set>
	</update>
	
	<update id="update" parameterType="bVo">
		update board set
		title=#{title}, content = #{content} where seq=#{seq};
	</update>
	
	<delete id="delete">
		delete from board where seq=#{seq};
	</delete>
	
</mapper>